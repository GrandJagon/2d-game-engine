                "${workspaceFolder}/CoffeeCupEngine/src/game/ECS/components/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/game/ECS/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/game/input/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/game/scenes/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/platform/OpenGL/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/platform/SDL/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lSDL2",
                "-ldl",
                "-lGL",
                "-lglfw",
                "-lGLU",
                "-lglut",
                "-lGLEW"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
