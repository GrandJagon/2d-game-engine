                "${workspaceFolder}/CoffeeCupEngine/src/rendering/geometry/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/vertexBuffer/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/indexBuffer/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/vertexArray/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/vertexBufferLayout/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/renderer/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/texture/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/shaders/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/camera/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/src/rendering/textureManager/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/vendors/stb_image/*.cpp",
                "${workspaceFolder}/CoffeeCupEngine/vendors/imgui/*.cpp",             
                "${workspaceFolder}/CoffeeCupEngine/src/base/window/*.cpp",
